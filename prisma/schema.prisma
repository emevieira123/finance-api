generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  usuarioId     String @id @default(uuid())
  nome          String
  email         String @unique
  senha         String
  usuarioGithub String

  divida Divida[]

  @@map("usuarios")
}

model Divida {
  dividaId     String   @id @default(uuid())
  nomeCobrador String
  nomeProduto  String
  created_at   DateTime @default(now())

  usuarioId String
  usuario   Usuarios @relation(fields: [usuarioId], references: [usuarioId])

  parcelas Parcelas[]

  @@map("divida")
}

model Parcelas {
  parcelaId      String    @id @default(uuid())
  valorParcela   Decimal
  dataVencimento DateTime
  status         Boolean
  created_at     DateTime  @default(now())
  updated_at     DateTime?

  dividaId String
  divida   Divida @relation(fields: [dividaId], references: [dividaId])

  @@map("parcelas")
}
